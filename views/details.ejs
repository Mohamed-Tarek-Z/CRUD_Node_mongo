<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="details content">
    <h1>Profile :</h1>
    <h2> <%= emp.name%></h2>
    <div class="content">
      <p><span>SurName :</span> <%= emp.surname %></p>
      <p><span>Email :</span> <%= emp.email %></p>
      <p><span>Birth Date :</span> <%= new Date(emp.birthDate).toISOString().split("T")[0] %></p>
      <p><span>Department :</span> <%= emp.department.name %></p>
    </div>
  </div>


 <div class="operation-btn">
   <br>
   <form action="/emps/<%= emp.name %>" method="post">
    <button type="submit" >Remove</button>
  </form>
   <form action="/emps/edit/<%= emp.name %>/<%= action %>" method="edit">
    <button type="submit">Updates</button>
  </form>
 </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>